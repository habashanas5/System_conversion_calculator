<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:fadingEdge="vertical"
    android:gravity="top"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Text1"
            android:layout_width="353dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="103dp"
            android:drawableLeft="@drawable/lab"
            android:text="  Please enter a number "
            android:textColor="#000000"
            android:textSize="26dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/myEdit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:ems="20"
            android:inputType="text"
            android:digits="0123456789ABCDEFabcdef"
            android:padding="10dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="145dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">


            <RadioButton
                android:id="@+id/rd_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Decimal"
                android:textSize="18dp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/rd_binary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Binary"
                android:textSize="18dp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/rd_octal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Octal"
                android:textSize="18dp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/rd_hex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Hex"
                android:textSize="18dp"
                android:visibility="visible" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Text2"
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Decimal: "
                    android:textColor="#3F51B5"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Text3"
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Binary: "
                    android:textColor="#E91E63"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Text4"
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Octal: "
                    android:textColor="#9C27B0"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Text5"
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="HexaDecimal: "
                    android:textColor="#00BCD4"
                    android:textSize="18dp" />

            </LinearLayout>

            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@drawable/clear"
                android:drawableRight="@drawable/clear"
                android:text="clear" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>